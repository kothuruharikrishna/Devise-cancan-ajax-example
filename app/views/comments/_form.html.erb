<%= form_for([@post,@post.comments.build], :remote=> true, :html=> {:class=> "form-inline"} ) do |f| %>
  <ul class="errors"></ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title ,:maxlength=>30, class: 'form-control'%>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body ,:maxlength=>100, class: 'form-control'%>
  </p>
  <p>
    <div id="star-rating"> </div>
  </p>
  <p>
    <%= f.submit "Submit Comment", class: 'btn btn-success btn-sx' %>
  </p>
<% end %>


