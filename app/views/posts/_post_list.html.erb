<% @posts.each do |post| %>
	<tr>
	  <td><%= post.title %></td>
	  <td><%= post.body %></td>
	  <td><%= link_to 'Show', post,:class=> "btn btn-default" %></td>
	  <% if can? :update, post %>
	  	<td><%= link_to 'Edit', edit_post_path(post), remote: true, :class=>"btn btn-info"%></td>
	  <% end %>
	  <% if can? :destroy, post %>
	  	<td><%= link_to 'Destroy', post, method: :delete, remote: true, :class=> "btn btn-danger", data: { confirm: 'Are you sure?' } %></td> <% end %>
	</tr>
<% end %>