$("ul.errors").html("")
<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#post_index").html("<%= escape_javascript(render 'post_list') %>")
  $("#post-modal").modal("hide")
<% end %>